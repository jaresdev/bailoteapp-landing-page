---
import { Image } from "astro:assets"

const { title, id } = Astro.props
---

<section id={ id } class="w-full px-8 py-12 gap-6 flex flex-row max-w-[1440px] mx-auto">
  <div class="w-1/2">
    <Image 
      src="/academy_image.webp" 
      alt="Bailoteapp Academy" 
      width={676}
      height={447}
      class="rounded-lg"
      loading="lazy"
    />
  </div>
  <article class="w-1/2 flex flex-col gap-6 px-6">
    <h2 class="text-[#AE6F54] text-2xl font-bold">{ title }</h2>
    <slot />
  </article>
</section>