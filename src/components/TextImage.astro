---
import { Image } from "astro:assets"

const { title, id } = Astro.props
---

<section id={ id } class="w-full px-8 py-12 gap-6 flex flex-row max-w-[1440px] mx-auto">
  <Image 
    src="/academy_image.webp" 
    alt="Bailoteapp Academy" 
    width="676" 
    height="447"
    class="rounded-lg"
  />
  <article class="flex flex-col gap-6 px-6">
    <h2 class="text-[#AE6F54] text-2xl font-bold">{ title }</h2>
    <slot />
  </article>
</section>